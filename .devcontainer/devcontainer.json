{
  "name": "VSD RISC-V EdgeAI Codespace",
  "build": { "dockerfile": "Dockerfile" },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "noVNC Desktop",
      "onAutoForward": "openBrowser"
    }
  },
  "overrideCommand": false,
  "remoteUser": "vscode",
  "containerEnv": { "DISPLAY": ":1" },
  "postCreateCommand": "bash .devcontainer/setup.sh"
}
